.bespoke-parent
  font-size: 1.5em
  background-image:url(http://fc01.deviantart.net/fs70/i/2010/166/5/9/Slipstream_by_FoxGirlJade.jpg)
  -webkit-background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  -o-background-size: 100% 100%;
  background-size: 100% 100%;
  color: $white
  font-family: $sans-serif
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  overflow: hidden
  text-align: center
  transition: background 1s ease

  

.bespoke-slide
 background none;
 transition: all .5s ease;
 transform-origin: 50% 50% -400px;

.bespoke-slide h1,h2,h3,li
 color White

.bespoke-slide ul, .bespoke-slide ol {
  text-align: left;
}

.bespoke-inactive {
    opacity: 0;
}
.bespoke-before {
    transform: rotateY(-90deg);
}
.bespoke-after {
    transform: rotateY(90deg);
}